<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management - Dashboard</title>
    <link rel="stylesheet" href="../assets/css/style.css">
</head>
<body>

    {% include 'header.twig' %}

    <main style="padding:0 20px;">
        <h2>Dashboard - Books</h2>

        <div id="results">
            {% if books %}
                <table border="1" cellpadding="10">
                    <thead>
                        <tr>
                            <th>ID</th><th>Title</th><th>Author</th><th>Category</th>
                            <th>Published Year</th><th>ISBN</th><th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.id|e }}</td>
                                <td>{{ book.title|e }}</td>
                                <td>{{ book.author|e }}</td>
                                <td>{{ book.category|e }}</td>
                                <td>{{ book.published_year|e }}</td>
                                <td>{{ book.isbn|e }}</td>
                                <td>
                                    <a href="edit.php?id={{ book.id|e }}">Edit</a> |
                                    <a href="delete.php?id={{ book.id|e }}&csrf={{ csrf_token|e }}" 
                                       onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>No books found.</p>
            {% endif %}
        </div>
    </main>

    {% include 'footer.twig' %}

</body>
</html>
